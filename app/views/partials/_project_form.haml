.six-col
  = form_for @project do |p|
    .form-group
      = p.label :title
      = p.text_field :title
    .form-group
      = p.label :organization
      = p.text_field :organization
    .form-group
      = p.label :budget
      = p.number_field :budget
    .form-group
      = p.label :description
      = p.text_area :description
    .form-group
      = p.fields_for :tags, @project.tags do |t|
        %label
          Tags
        = t.text_field :name, value: "enter some tags"
    .form-group
      = p.submit
