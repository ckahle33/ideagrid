= form_for @idea do |p|
  .custom-file
    %label{class: "custom-file-label", for:"customFile"}
      Choose file
    = p.file_field :image, direct_upload: true, class: "custom-file-input"
  .form-group
    = p.label :title
    = p.text_field :title, required: true
  .form-group
    -# %input{id: "x", type: "hidden", name: "description"}
    = p.label :description
    = p.hidden_field :description, required: true, id: "x"
    %trix-editor{input: "x"}
  .form-group
    = p.fields_for :tags, @idea.tags do |t|
      %label
        Tags
      .tag-container
        = t.text_field :name, value: ""
  .form-group
    = p.submit
