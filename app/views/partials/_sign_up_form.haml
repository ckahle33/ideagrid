= form_for @user, url: {action: "create"} do |p|
  .form-group
    = p.label :username
    = p.text_field :username
  .form-group
    = p.label :email
    = p.text_field :email
  .form-group
    = p.label :password
    = p.password_field :password
  .form-group
    = p.label :password_confirmation
    = p.password_field :password_confirmation
  .form-group
    = p.submit
