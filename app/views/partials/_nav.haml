%nav.navbar.navbar-light.navbar-expand-lg
  = link_to 'IdeaGrid', '/', class: "navbar-brand"
  .navbar-collapse
    - if current_user
      %ul.navbar-nav.ml-auto
        %li.nav-item
          = link_to "New Project", new_project_path, class: "nav-link"
        %li.nav-item
          = link_to "My Projects", me_projects_path, class: "nav-link"
        %li.nav-item
          = link_to "Upvoted", voted_projects_path, class: "nav-link"
        |
        %li.nav-item
          = link_to current_user.email, profile_path, class: "nav-link"
        %li.nav-item
          = link_to "Log Out", logout_path, class: "nav-link"
    - else
      %ul.navbar-nav.ml-auto
        %li.nav-item
          = link_to "Sign Up", signup_path, class: "nav-link"
        %li.nav-item
          = link_to "Log In", login_path, class: "nav-link"
        %li.nav-item
          = link_to "Explore", "#", class: "nav-link"
