.six-col
  = form_for User.new do |p|
    .form-group
      = p.label :email
      = p.text_field :email
    .form-group
      = p.label :password
      = p.password_field :password
    .form-group
      = p.label :password_confirmation
      = p.password_field :password_confirmation
    .form-group
      = p.submit
