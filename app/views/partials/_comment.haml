.comment{"data-comment-id": c.id, "data-endpoint": "/projects/#{@project.id}/comment"}
  .created_at
    = c.created_at.strftime('%b %e, %l:%M %p')
  .reply
    %a{href: "#", "data-reply": ""}
      reply
    %a{href: "#", "data-cancel": ""}
      cancel

    .email
      = c.user.email
    .body
      = c.body

    .reply-form{"id": "comment-#{c.id}"}

  - if c.children
    - c.children.each do |child|
      = render partial: "partials/comment", locals: {c: child}
