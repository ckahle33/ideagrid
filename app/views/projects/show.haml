- unless current_user
  = render partial: 'partials/hero'

.row.container
  = render partial: "partials/sidebar"
  .nine-col.rel
    = render partial: "projects/detail"

    // comment form - to partial
    .comment-section
      = form_for @comment, :url => { :controller => "comments", :action => "create" } do |c|
        .form-group
          = label_tag 'Comment'
          = c.text_field :body
        .form-group
          = c.submit "Save"

    // comments
    - @project.comments.roots.each do |c|
      = render partial: "partials/comment", locals: {c: c}
